<div class="header text-center">
  <%= image_tag "snoop.png", alt: "Logo", width: 100, style: "margin-bottom: 5px; margin-top: 30px" %>
</div>

<div class="search-bar text-center">
  <%= form_with url: items_path, method: :get, class: "search-form" do %>
    <div class="input-wrapper">
      <%= text_field_tag :query,
            params[:query],
            class: "search-input form-control",
            placeholder: "What can we help you find?"
        %>
      <button type="submit" class="search-button"><i class="fa-solid fa-magnifying-glass"></i></button>
    </div>
  <% end %>
</div>

<div class="container">
  <div class="row justify-content-center">
    <% if @items.any? %>
      <% @items.each do |item| %>
        <%= render "item-card", item: item %>
      <% end %>
    <% else %>
      <p>No results found. Sorry :(</p>
    <% end %>
  </div>
</div>

<div class="navbar fixed-bottom">
  <div class="button-column">
    <i class="fa-solid fa-shop"></i>
      <%= link_to root_path, class: "no-link-style" do %>
      <span>Shop</span>
    <% end %>
  </div>
  <div class="button-column">
    <i class="fa-solid fa-cart-shopping"></i>
      <%= link_to selected_items_path, class: "no-link-style" do %>
        <span>Cart</span>
      <% end %>
  </div>
  <div class="button-column">
    <i class="fa-solid fa-user"></i>
      <%= link_to user_session_path, class: "no-link-style" do %>
      <span>Login</span>
      <% end %>
  </div>
</div>
